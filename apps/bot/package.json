{
  "name": "bot",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "rimraf dist/ && tsc && tsc-alias && copyfiles -u 1 prisma/generated/*.node dist/prisma/",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile bot",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/src/index.js"
  },
  "dependencies": {
    "db": "*",
    "dotenv": "^17.2.1",
    "grammy": "^1.37.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}